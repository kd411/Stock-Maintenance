<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.anay.stockmaintenance.HomeActivity">

    <Button
        android:id="@+id/newbill"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="90dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:elevation="10dp"
        android:fadingEdge="horizontal|vertical"
        android:padding="5dp"
        android:soundEffectsEnabled="false"
        android:text="New Bill"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/oldbill"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:elevation="10dp"
        android:padding="5dp"
        android:text="Old Bill"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:elevation="10dp"
        android:fadingEdge="horizontal|vertical"
        android:padding="5dp"
        android:text="Update Stock"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:textIsSelectable="false"
        android:textSize="28sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/check"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:elevation="10dp"
        android:padding="5dp"
        android:text="Stock List"
        android:textAllCaps="false"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="28sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/stockbuy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:elevation="10dp"
        android:padding="5dp"
        android:text="Items To Buy"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:textStyle="italic"
        android:visibility="visible" />

</LinearLayout>
